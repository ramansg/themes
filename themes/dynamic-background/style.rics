    color: var(--icon);
  }
}

ytmusic-navigation-button-renderer.ytmusic-carousel button.ytmusic-navigation-button-renderer {
  background: var(--button-color);
  border-radius: var(--radius-button);
  &:focus-within,
  &:hover {
